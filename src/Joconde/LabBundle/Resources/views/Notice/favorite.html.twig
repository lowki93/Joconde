{% extends '::base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}
    {% stylesheets
        'bundles/jocondelab/css/list.sass'
        filter="cssrewrite,sass" output='css/list.css' %}
           <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    LIST : {{notices | length}} <br />
    <ul>
        {% for notice in notices %}
        <li>
            {% for image in notice.noticeImage|slice(0,1) %}
                <img src="http://www.culture.gouv.fr/Wave/image/joconde{{image.relativeUrl}}" />
            {% endfor %}
            <div>
                id : {{notice.id}}<br />
                ref : {{notice.ref}}<br />
                auteur : {{notice.autr}}<br />
                titre : {{notice.titr}}<br />
                <a href="{{path('notice_id', {'id': notice.id}) }}">Go to notice {{notice.id}}</a><br /><br />
            </div>
        </li>
        {% else %}
            il n'y a pas de notices en favoris
        {% endfor %}
    </ul>  
{% endblock %}