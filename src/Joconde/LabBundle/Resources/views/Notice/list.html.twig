{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets
        '@JocondeLabBundle/Resources/Public/css/list.sass'
        filter="cssrewrite,sass" output='css/list.css' %}
           <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}
{% endblock %}

{% block search %}
    {% if Favoris is defined %}
    {% else %}
        <p class="title-page">
            <a href="#" value="0">{{search|join(" ")}}</a>
        </p>
    {% endif %}
{% endblock %}

{% block logo %}
    {% if Favoris is defined %}
         <a href="{{ path('joconde_lab_homepage') }}"><img src="{{ asset('bundles/jocondelab/images/logo1.png') }}" alt="logo" height="50px"/></a>
    {% else %}
        <a href="{{ path('joconde_lab_homepage') }}"><img src="{{ asset('bundles/jocondelab/images/logo2.png') }}" alt="logo" height="50px"/></a>
    {% endif %}
{% endblock %}

{% block body %}
    {% if Favoris is defined %}
        <div class="page-title">
            <h3>votre s√©lection</h3>
            {% if notices %}
                <button class="btn-favorite delete-all" ><i class="picto_corbeille"></i></button> 
            {% endif %}
        </div>
    {% else %}
    {% endif %}
        <div class="margin-container">
            <div class="page-container">
                <div class="page-list">
                    {% include 'JocondeLabBundle:Notice:ajax.list.html.twig' %}
                </div>
            </div>
        </div>
{% endblock %}

{% block javascripts %}
    {% javascripts
        '@JocondeLabBundle/Resources/public/js/session-favorite.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
